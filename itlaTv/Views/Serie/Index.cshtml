@model List<Application.ViewModels.TvSerieViewModel>
@{
    ViewData["Title"] = "Series";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Serie" asp-action="Create" class="btn btn-outline-success">Crear nueva serie</a>

        </div>

    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay Series</h2>
        }
        else
        {
            @foreach (Application.ViewModels.TvSerieViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder card-img card-img-top img-series-size" src="@item.ImgLink">
                        <div class="card-body">
                            <h4>@item.Name</h4>
                            <p class="card-text"><a href="@item.Link" target="_blank">Ver</a></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Serie" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                    <a asp-controller="Serie" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                                </div>
                                
                                <small class="text-body-secondary">@item.ProducerId</small>
                                <small class="text-body-secondary">Genero Primario: @item.PrimaryGenderId</small>
                                <small class="text-body-secondary">Genero Secundario: @item.SecondaryGenderId</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>

