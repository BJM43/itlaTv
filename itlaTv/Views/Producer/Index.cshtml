@model List<Application.ViewModels.ProducerViewModel>
@{
    ViewData["Title"] = "Productoras";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Producer" asp-action="Create" class="btn btn-outline-success">Crear nueva productora</a>

        </div>

    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay Productoras</h2>
        }
        else
        {
            <div class="col-4 offset-4">
                <ul>
                    @foreach (Application.ViewModels.ProducerViewModel item in Model)
                    {

                        <li class ="d-flex justify-content-between align-items-center">
                            <span class="h4">@item.Name</span>
                            <a asp-controller="Producer" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                            <a asp-controller="Producer" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                        </li>
                           
                    }
                </ul>
            </div>
        }

    </div>
</div>

